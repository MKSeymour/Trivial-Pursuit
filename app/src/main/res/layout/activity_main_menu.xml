<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.trivial_pursuit.trivialpursuit.MainMenu">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/Game_Title"
        android:layout_centerHorizontal="true"
        android:onClick="secretbutton"
        android:src="@drawable/trivialwheel2" />

    <ImageView
        android:id="@+id/Game_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/trivial"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textView" />

    <ImageView
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_above="@+id/button3"
        android:layout_centerHorizontal="true"
        android:onClick="startLocal"
        android:src="@drawable/blue_button" />

    <TextView
        android:id="@+id/myImageViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button"
        android:layout_alignRight="@+id/button"
        android:layout_alignTop="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="Local Play"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/button3"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_above="@+id/button2"
        android:layout_alignLeft="@+id/myImageViewText3"
        android:layout_alignStart="@+id/myImageViewText3"
        android:onClick="startQuick"
        android:src="@drawable/blue_button" />

    <TextView
        android:id="@+id/myImageViewText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignTop="@+id/button3"
        android:layout_alignRight="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="Quickplay"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/myImageViewText"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/myImageViewText"
        android:layout_marginBottom="18dp"
        android:onClick="startSettings"
        android:src="@drawable/blue_button" />
    <TextView
        android:id="@+id/myImageViewText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignTop="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:textColor="@color/white"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="Settings"/>

</RelativeLayout>
