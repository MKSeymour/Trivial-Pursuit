<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/qset"
    android:background="@drawable/background"
    tools:context="com.trivial_pursuit.trivialpursuit.LocalPlayQSet">
    <TextView
        android:id="@+id/text_view_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="32sp"
        android:text="Select Question Set"
        android:textColor="@color/black_text"
        android:layout_marginBottom="83dp"
        android:layout_above="@+id/buttonM"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/backbutton"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:onClick="Backbutt"
        android:src="@drawable/backbut"/>
    <Button
        android:layout_width="50pt"
        android:layout_height="wrap_content"
        android:text="Master\nEdition"
        android:onClick="onClickM"
        android:id="@+id/buttonM"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/die"
        android:layout_width="50pt"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonC"
        android:layout_alignStart="@+id/buttonC"
        android:layout_below="@+id/buttonC"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="64dp"
        android:onClick="roll"
        android:text="Roll" />
    <Button
        android:layout_width="50pt"
        android:layout_height="wrap_content"
        android:text="Custom"
        android:onClick="onClickC"
        android:id="@+id/buttonC"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/buttonM"
        android:layout_alignLeft="@+id/buttonM"
        android:layout_alignStart="@+id/buttonM" />
</RelativeLayout>
