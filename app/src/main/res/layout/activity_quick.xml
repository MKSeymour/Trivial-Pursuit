<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.trivial_pursuit.trivialpursuit.Quick">
    <ImageView
        android:id="@+id/card"
        android:layout_width="500dp"
        android:layout_height="480dp"
        android:src="@drawable/trivialcardblue"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/questionTxt"
        android:layout_height="170dp"
        android:layout_width="333dp"
        android:textSize="20sp"
        android:text="What is your favorite colour?"
        android:textColor="@color/black_text"
        android:layout_marginBottom="39dp"
        android:layout_above="@+id/answerHelp"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/answerHelp"
        android:layout_height="40dp"
        android:layout_width="220dp"
        android:textSize="22sp"
        android:text="Hold Card For Answer"
        android:textColor="@color/black_text"
        android:layout_marginBottom="62dp"
        android:layout_alignBottom="@+id/card"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:id="@+id/next"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:src="@drawable/next"
        android:layout_marginBottom="13dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/questionTxt"
        android:layout_alignEnd="@+id/questionTxt" />
    <ImageView
        android:id="@+id/prev"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:src="@drawable/prev"
        android:layout_alignTop="@+id/next"
        android:layout_alignLeft="@+id/questionTxt"
        android:layout_alignStart="@+id/questionTxt" />
</RelativeLayout>
